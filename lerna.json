{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "4.0.0-beta.3",
  "npmClient": "pnpm",
  "packages": ["packages/*", "apps/*", "tools/*", "."],
  "command": {
    "version": {
      "allowBranch": ["master", "develop", "release/*", "fix/*"],
      "conventionalCommits": true,
      "conventionalPrerelease": true,
      "changelogPreset": "gitmoji-config",
      "createRelease": "github",
      "message": "chore(release): version packages %v",
      "tagVersionPrefix": "v",
      "push": true,
      "exact": true,
      "yes": true,
      "changelog": true
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish packages %v",
      "registry": "https://registry.npmjs.org/",
      "yes": true
    }
  },
  "ignoreChanges": [
    "./apps/*",
    "./tools/*",
    "./docs/*",
    "**/__tests__/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
