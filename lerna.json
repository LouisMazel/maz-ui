{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "4.1.1-beta.0",
  "npmClient": "pnpm",
  "packages": [
    "packages/*",
    "apps/*",
    "tools/*",
    "."
  ],
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "develop",
        "release/*",
        "fix/*"
      ],
      "conventionalCommits": true,
      "message": "chore(release): version packages %v",
      "tagVersionPrefix": "v",
      "push": false,
      "exact": true,
      "yes": true,
      "gitTagVersion": false,
      "changelog": false
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish packages %v",
      "registry": "https://registry.npmjs.org/",
      "yes": true
    }
  },
  "ignoreChanges": [
    "./apps/vue-app/*",
    "./apps/nuxt-app/*",
    "./tools/*",
    "**/__tests__/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
