{
  "packages": ["packages/*"],
  "loglevel": "verbose",
  "version": "3.0.0-next.4",
  "npmClientArgs": ["--production=false", "--no-progress"],
  "yes": true,
  "granularPathspec": false,
  "command": {
    "version": {
      "allowBranch": ["release/*"],
      "message": "chore(release): publish version %v",
      "conventionalCommits": true,
      "forceGitTag": true,
      "push": false,
      "tagVersionPrefix": ""
    }
  }
}
