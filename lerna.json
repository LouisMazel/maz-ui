{
  "packages": ["packages/*"],
  "loglevel": "verbose",
  "version": "3.0.0",
  "npmClientArgs": ["--production=false", "--no-progress"],
  "yes": true,
  "granularPathspec": false,
  "command": {
    "version": {
      "allowBranch": ["release/*"],
      "message": "chore(release): bump version to %v",
      "conventionalCommits": true,
      "forceGitTag": true,
      "push": true,
      "tagVersionPrefix": "v"
    }
  }
}
