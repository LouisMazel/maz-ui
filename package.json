{
  "name": "root",
  "private": true,
  "version": "4.0.0-alpha.5",
  "description": "A standalone components library for Vue.Js & Nuxt.Js (v3.x)",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "git clean -fXd -e \\!.env -e \\!.env.* -e \\!.cursorrules -e \\!.vscode -e \\!.vscode/**/* -e \\!*.crt -e \\!*.key",
    "prepare": "npx husky",
    "pre-commit": "lint-staged",
    "pre-commit:all": "lerna run pre-commit --concurrency=1",
    "commit": "cz",
    "format": "prettier . --write",
    "build:packages": "lerna run build --scope='{@maz-ui/*,maz-ui}' --include-dependencies",
    "build:apps": "lerna run build --scope='{docs,nuxt-app,vue-app}' --include-dependencies",
    "build:all": "lerna run build",
    "lint:all": "lerna run lint",
    "build:nuxt-module": "lerna run build --scope='@maz-ui/nuxt'",
    "lint:fix:all": "lerna run lint:fix",
    "lint:check": "lerna run lint:check",
    "typecheck:all": "lerna run typecheck",
    "test:unit:all": "lerna run test:unit",
    "test:unit:coverage:all": "lerna run test:unit:coverage",
    "healthcheck": "pnpm lint && pnpm typecheck:all && pnpm test:unit && pnpm build:packages && pnpm -F docs build",
    "lerna:version": "lerna version --conventional-commits --no-push",
    "lerna:version:alpha": "lerna version --conventional-commits --conventional-prerelease --preid alpha --no-push",
    "lerna:version:beta": "lerna version --conventional-commits --conventional-prerelease --preid beta --no-push",
    "lerna:version:graduate": "lerna version --conventional-commits --conventional-graduate --no-push",
    "lerna:publish": "pnpm build:packages && lerna publish from-git",
    "lerna:publish:alpha": "pnpm build:packages && lerna publish from-git --dist-tag alpha",
    "lerna:publish:beta": "pnpm build:packages && lerna publish from-git --dist-tag beta",
    "lerna:status": "lerna changed",
    "lerna:diff": "lerna diff",
    "lerna:changelog": "lerna version --conventional-commits --no-git-tag-version --no-push --yes",
    "generate:changelogs": "node scripts/generate-changelogs.js",
    "nx:graph": "lerna run build --graph",
    "nx:affected:build": "lerna run build --since HEAD~1",
    "nx:affected:test": "lerna run test:unit --since HEAD~1",
    "nx:affected:lint": "lerna run lint --since HEAD~1",
    "nx:cache:clear": "lerna exec -- rm -rf .nx/cache",
    "dev:watch": "lerna run dev --parallel --stream"
  },
  "lint-staged": {
    "!(node_modules/**/*|packages/**/*|apps/**/*|.prettierignore|.gitignore|.editorconfig).*": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@nx/js": "^21.2.2",
    "@types/node": "^24.0.3",
    "@types/parse-path": "^7.1.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "lerna": "^8.2.3",
    "lint-staged": "^16.1.2",
    "nx": "^21.2.2",
    "prettier": "^3.5.3",
    "ts-node": "11.0.0-beta.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "keywords": [
    "vue",
    "components",
    "vue-component",
    "framework",
    "library",
    "ui"
  ],
  "author": "LouisMazel <me@loicmazuel.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LouisMazel/maz-ui/issues"
  },
  "homepage": "https://maz-ui.com/",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
