{
  "name": "root",
  "version": "4.3.0-alpha.1",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "description": "A standalone components library for Vue.Js & Nuxt.Js",
  "author": "LouisMazel <me@loicmazuel.com>",
  "license": "ISC",
  "homepage": "https://maz-ui.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "bugs": {
    "url": "https://github.com/LouisMazel/maz-ui/issues"
  },
  "keywords": [
    "vue",
    "components",
    "vue-component",
    "framework",
    "library",
    "ui"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "make clean",
    "prepare": "npx husky",
    "pre-commit": "lint-staged",
    "pre-commit:all": "pnpm -r exec lint-staged --concurrency=1",
    "commit": "cz",
    "build:all": "lerna run build",
    "build:apps": "lerna run build --scope='{docs,nuxt-app,vue-app}'",
    "build:utils": "lerna run build --scope='{@maz-ui/node,@maz-ui/utils}'",
    "build:packages": "lerna run build --scope='{@maz-ui/*,maz-ui}'",
    "build:packages:test": "lerna run build --scope='{@maz-ui/translations,@maz-ui/icons,@maz-ui/node,@maz-ui/utils}'",
    "lint": "cross-env NODE_ENV=production eslint",
    "lint:fix": "cross-env NODE_ENV=production eslint --fix",
    "lint:all": "lerna run lint",
    "lint:fix:all": "lerna run lint:fix",
    "typecheck:all": "lerna run typecheck",
    "test:unit:all": "lerna run test:unit",
    "test:unit:coverage:all": "lerna run test:unit:coverage",
    "healthcheck": "pnpm lint:all && pnpm typecheck:all && pnpm test:unit:all && pnpm build:packages && pnpm -F docs build",
    "clm": "changelogen-monorepo",
    "lerna:status": "lerna changed",
    "lerna:diff": "lerna diff",
    "lerna:clean": "lerna clean",
    "nx:cache:clear": "lerna exec -- rm -rf .nx/cache",
    "dev:watch": "lerna run dev --parallel --stream"
  },
  "devDependencies": {
    "@codecov/vite-plugin": "^1.9.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@maz-ui/changelogen-monorepo": "workspace:*",
    "@nx/js": "^22.0.2",
    "@types/node": "^24.10.0",
    "@types/parse-path": "^7.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "changelogen": "^0.6.2",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "conventional-changelog-gitmoji-config": "^1.5.2",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lerna": "^9.0.0",
    "lint-staged": "^16.2.6",
    "nx": "^22.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,mts,md,yml,json}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
