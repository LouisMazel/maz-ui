{
  "name": "root",
  "private": true,
  "version": "4.0.0-alpha.5",
  "description": "A standalone components library for Vue.Js & Nuxt.Js (v3.x)",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "git clean -fXd -e \\!.env -e \\!.env.* -e \\!.vscode -e \\!.vscode/**/* -e \\!*.crt -e \\!*.key",
    "prepare": "npx husky",
    "pre-commit": "lint-staged",
    "commit": "cz",
    "format": "prettier . --write",
    "build:packages": "pnpm -F @maz-ui/eslint-config build && pnpm -F @maz-ui/utils build && pnpm -F @maz-ui/cli build && pnpm -F @maz-ui/icons build && pnpm -F @maz-ui/themes build && pnpm -F @maz-ui/translations build && pnpm -F maz-ui build && pnpm -F @maz-ui/nuxt build",
    "build:apps": "pnpm -F docs build && pnpm -F nuxt-app nuxt-app:build && pnpm -F vue-app vue-app:build",
    "build:all": "pnpm -r build",
    "lint": "pnpm -r --parallel lint",
    "typecheck": "pnpm -r --parallel typecheck",
    "test:unit": "pnpm -r --parallel test:unit",
    "healthcheck": "pnpm lint && pnpm typecheck && pnpm test:unit && pnpm build:packages && pnpm -F docs build",
    "changesets:add": "changeset add",
    "changesets:version": "changeset version",
    "changesets:release": "pnpm build:all && changeset publish",
    "changesets:status": "changeset status",
    "changesets:tag": "changeset tag",
    "changesets:validate": "node scripts/validate-changesets.js",
    "changesets:pre-alpha": "changeset pre enter alpha",
    "changesets:pre-beta": "changeset pre enter beta",
    "changesets:pre-exit": "changeset pre exit",
    "changesets:publish-alpha": "pnpm build:all && changeset publish --tag alpha",
    "changesets:publish-beta": "pnpm build:all && changeset publish --tag beta",
    "changesets:snapshot": "changeset version --snapshot && pnpm build:all && changeset publish --tag snapshot"
  },
  "lint-staged": {
    "!(node_modules/**/*|packages/**/*|.prettierignore|.gitignore|.editorconfig).*": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@types/node": "^24.0.3",
    "@types/parse-path": "^7.1.0",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "ts-node": "11.0.0-beta.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "keywords": [
    "vue",
    "components",
    "vue-component",
    "framework",
    "library",
    "ui"
  ],
  "author": "LouisMazel <me@loicmazuel.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LouisMazel/maz-ui/issues"
  },
  "homepage": "https://maz-ui.com/",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}