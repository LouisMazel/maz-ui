{
  "name": "root",
  "version": "0.0.2",
  "description": "A standalone components library for Vue.Js & Nuxt.Js (v3.x)",
  "scripts": {
    "prepare": "npx husky install",
    "pre-commit": "lint-staged",
    "format": "prettier . --write",
    "lint": "lerna run lint --parallel",
    "lerna:version": "npx lerna version",
    "release": "standard-version"
  },
  "lint-staged": {
    "!(node_modules/**/*|packages/**/*|.prettierignore|.gitignore|.editorconfig).*": [
      "prettier . --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/command-exists": "^1.2.0",
    "@types/node": "^18.11.11",
    "commitlint-config-cz": "^0.13.3",
    "cz-customizable": "^7.0.0",
    "gulp-conventional-changelog": "^2.0.35",
    "husky": "^8.0.2",
    "lerna": "^6.1.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "standard-version": "^9.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "keywords": [
    "vue",
    "components",
    "vue-component",
    "framework",
    "library",
    "ui"
  ],
  "author": "LouisMazel <me@loicmazuel.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LouisMazel/maz-ui/issues"
  },
  "homepage": "https://louismazel.github.io/maz-ui/"
}
