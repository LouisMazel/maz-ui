{
  "name": "root",
  "private": true,
  "version": "4.0.0-alpha.5",
  "description": "A standalone components library for Vue.Js & Nuxt.Js (v3.x)",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "git clean -fXd -e \\!.env -e \\!.env.* -e \\!.vscode -e \\!.vscode/**/* -e \\!*.crt -e \\!*.key",
    "prepare": "npx husky",
    "pre-commit": "lint-staged",
    "commit": "cz",
    "format": "prettier . --write",
    "build:packages": "pnpm -F @maz-ui/eslint-config build && pnpm -F @maz-ui/utils build && pnpm -F @maz-ui/cli build && pnpm -F @maz-ui/icons build && pnpm -F @maz-ui/themes build && pnpm -F @maz-ui/translations build && pnpm -F maz-ui build && pnpm -F @maz-ui/nuxt build",
    "build:apps": "pnpm -F docs build && pnpm -F nuxt-app nuxt-app:build && pnpm -F vue-app vue-app:build",
    "build:all": "pnpm -r build",
    "lint": "pnpm -r --parallel lint",
    "typecheck": "pnpm -r --parallel typecheck",
    "test:unit": "pnpm -r --parallel test:unit",
    "healthcheck": "pnpm lint && pnpm typecheck && pnpm test:unit && pnpm build:packages && pnpm -F docs build",
    "lerna:version": "lerna version --conventional-commits --no-push",
    "lerna:version:alpha": "lerna version --conventional-commits --conventional-prerelease --preid alpha --no-push",
    "lerna:version:beta": "lerna version --conventional-commits --conventional-prerelease --preid beta --no-push",
    "lerna:version:graduate": "lerna version --conventional-commits --conventional-graduate",
    "lerna:publish": "pnpm build:packages && lerna publish from-git",
    "lerna:publish:alpha": "pnpm build:packages && lerna publish from-git --dist-tag alpha",
    "lerna:publish:beta": "pnpm build:packages && lerna publish from-git --dist-tag beta",
    "lerna:status": "lerna changed",
    "lerna:diff": "lerna diff",
    "lerna:changelog": "lerna version --conventional-commits --no-git-tag-version --no-push --yes",
    "generate:changelogs": "node scripts/generate-changelogs.js"
  },
  "lint-staged": {
    "!(node_modules/**/*|packages/**/*|.prettierignore|.gitignore|.editorconfig).*": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@types/node": "^24.0.3",
    "@types/parse-path": "^7.1.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "lerna": "^8.2.3",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "ts-node": "11.0.0-beta.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "keywords": [
    "vue",
    "components",
    "vue-component",
    "framework",
    "library",
    "ui"
  ],
  "author": "LouisMazel <me@loicmazuel.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LouisMazel/maz-ui/issues"
  },
  "homepage": "https://maz-ui.com/",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
