{
  "name": "@maz-ui/changelogen-monorepo",
  "type": "module",
  "version": "4.2.1-beta.1",
  "description": "Changelogen adapter for monorepo management with unified and independent versioning",
  "author": "Louis Mazel <me@loicmazuel.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "bugs": "https://github.com/LouisMazel/maz-ui/issues",
  "keywords": [
    "changelogen",
    "monorepo",
    "changelog",
    "release",
    "versioning",
    "lerna",
    "maz-ui"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./cli": "./bin/clm.mjs",
    "./types": "./dist/index.d.ts"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "clm": "./bin/clm.mjs",
    "changelogen-monorepo": "./bin/clm.mjs"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "cross-env NODE_ENV=production eslint .",
    "lint:fix": "pnpm lint --fix",
    "cli": "node bin/clm.mjs"
  },
  "dependencies": {
    "@maz-ui/node": "workspace:*",
    "@maz-ui/utils": "workspace:*",
    "changelogen": "^0.6.2",
    "commander": "^14.0.1",
    "defu": "^6.1.4",
    "fast-glob": "^3.3.2",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@maz-ui/eslint-config": "workspace:*",
    "@types/semver": "^7.7.1",
    "unbuild": "^3.6.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mts,cjs,md,yml,json}": [
      "eslint --fix"
    ]
  }
}
