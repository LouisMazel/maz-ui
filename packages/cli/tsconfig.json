{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./lib",
    "paths": {
      "@/*": ["./*"]
    },
    "strictNullChecks": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
