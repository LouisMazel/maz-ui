{
  "name": "@maz-ui/utils",
  "type": "module",
  "version": "4.0.0-beta.7",
  "description": "Utils of maz-ui for JavaScript/TypeScript users",
  "author": "Louis Mazel <me@loicmazuel.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "bugs": "https://github.com/LouisMazel/maz-ui/issues",
  "keywords": [
    "utils",
    "javascript",
    "typescript",
    "maz-ui"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "module": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./helpers": {
      "types": "./dist/types/helpers/index.d.ts",
      "import": "./dist/helpers/index.js",
      "module": "./dist/helpers/index.js",
      "default": "./dist/helpers/index.js"
    },
    "./formatters": {
      "types": "./dist/types/formatters/index.d.ts",
      "import": "./dist/formatters/index.js",
      "module": "./dist/formatters/index.js",
      "default": "./dist/formatters/index.js"
    },
    "./helpers/*": {
      "types": "./dist/types/helpers/*.d.ts",
      "import": "./dist/helpers/*.js",
      "module": "./dist/helpers/*.js",
      "default": "./dist/helpers/*.js"
    },
    "./formatters/*": {
      "types": "./dist/types/formatters/*.d.ts",
      "import": "./dist/formatters/*.js",
      "module": "./dist/formatters/*.js",
      "default": "./dist/formatters/*.js"
    },
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pre-commit": "lint-staged",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "eslint": "^9.29.0",
    "eslint-plugin-format": "^1.0.1",
    "glob": "^11.0.3",
    "libphonenumber-js": "^1.12.9",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vue": "^3.5.17"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mts,cjs,md}": [
      "eslint --fix"
    ]
  }
}
