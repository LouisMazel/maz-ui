{
  "name": "@maz-ui/cli",
  "type": "module",
  "version": "4.2.1",
  "description": "CLI of Maz-ui",
  "license": "MIT",
  "homepage": "https://maz-ui.com/guide/cli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "bugs": {
    "url": "https://github.com/LouisMazel/maz-ui/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/cli.mjs",
    "./cli": "./bin/maz.mjs",
    "./types": "./dist/cli.d.ts"
  },
  "types": "./dist/cli.d.ts",
  "bin": {
    "maz": "./bin/maz.mjs",
    "maz-ui": "./bin/maz.mjs"
  },
  "files": [
    "LICENSE",
    "bin",
    "dist"
  ],
  "scripts": {
    "commit": "cz",
    "lint": "cross-env NODE_ENV=production eslint src",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "build": "unbuild",
    "build:stub": "unbuild --stub",
    "dev": "node --import=./register.js src/cli.ts",
    "start": "node --es-module-specifier-resolution=node dist/cli.mjs"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@maz-ui/node": "workspace:*",
    "commander": "^14.0.2",
    "cosmiconfig": "^9.0.0",
    "figlet": "^1.9.3",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@maz-ui/eslint-config": "workspace:*",
    "@types/figlet": "^1.7.0",
    "@types/tinycolor2": "^1.4.6",
    "unbuild": "^3.6.1"
  },
  "lint-staged": {
    "*.{js,ts,mjs,mts,cjs,md,yml,json}": "cross-env NODE_ENV=production eslint --fix"
  }
}
