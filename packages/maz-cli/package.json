{
  "name": "@maz-ui/cli",
  "type": "module",
  "version": "4.0.0-alpha.5",
  "description": "CLI of Maz-ui",
  "license": "MIT",
  "homepage": "https://maz-ui.com/guide/cli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "bugs": {
    "url": "https://github.com/LouisMazel/maz-ui/issues"
  },
  "exports": {
    ".": "./dist/cli.mjs",
    "./cli": "./bin/maz.mjs",
    "./types": "./dist/cli.d.ts"
  },
  "types": "./dist/cli.d.ts",
  "bin": {
    "maz": "./bin/maz.mjs",
    "maz-ui": "./bin/maz.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "pre-commit": "lint-staged",
    "commit": "cz",
    "lint": "cross-env NODE_ENV=production eslint --fix src",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "build": "unbuild",
    "build:stub": "unbuild --stub",
    "dev": "node --import=./register.js src/cli.ts",
    "start": "node --es-module-specifier-resolution=node dist/cli.mjs"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "clear": "^0.1.0",
    "colorette": "^2.0.20",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "figlet": "^1.8.1",
    "tinycolor2": "^1.6.0",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@types/clear": "^0.1.4",
    "@types/figlet": "^1.7.0",
    "@types/tinycolor2": "^1.4.6",
    "unbuild": "^3.5.0"
  },
  "lint-staged": {
    "*.{js,ts,mjs,mts,cjs}": "cross-env NODE_ENV=production eslint --fix"
  }
}
