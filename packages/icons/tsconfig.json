{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "node",
      "vite",
      "vite-svg-loader"
    ],
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "./package.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
