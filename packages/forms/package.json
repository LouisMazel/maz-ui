{
  "name": "@maz-ui/forms",
  "type": "module",
  "version": "0.0.0",
  "description": "Form builder and validation utilities for Maz-UI",
  "author": "Louis Mazel <me@loicmazuel.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "bugs": "https://github.com/LouisMazel/maz-ui/issues",
  "keywords": [
    "forms",
    "validation",
    "maz-ui",
    "vue",
    "valibot"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/types/components.d.ts",
      "import": "./dist/components/index.js"
    },
    "./composables": {
      "types": "./dist/types/composables.d.ts",
      "import": "./dist/composables/index.js"
    },
    "./utils": {
      "types": "./dist/types/utils.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch --mode development",
    "typecheck": "vue-tsc --noEmit",
    "lint": "pnpm lint:js && pnpm lint:style",
    "lint:fix": "pnpm lint:js:fix && pnpm lint:style:fix",
    "lint:js": "cross-env NODE_ENV=production eslint",
    "lint:js:fix": "pnpm lint:js --fix",
    "lint:style": "stylelint \"./**/*.{vue,css,scss,postcss,pcss,html}\"",
    "lint:style:fix": "pnpm lint:style --fix",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "dependencies": {
    "maz-ui": "workspace:*",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@maz-ui/vite-config": "workspace:*"
  },
  "lint-staged": {
    "*.{js,ts,vue,mjs,mts,cjs,md,yml,json}": "cross-env NODE_ENV=production eslint --fix"
  }
}
