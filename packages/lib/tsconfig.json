{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["esnext", "DOM", "DOM.iterable", "scripthost"],
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "paths": {
      "package/*": ["package/*"],
      "unit/*": ["tests/unit/*"]
    },
    "types": ["@types/node", "google.maps", "vitest/globals"]
  },
  "include": ["build/**/*", "package/**/*"],
  "exclude": ["node_modules", "lib", "css"]
}
