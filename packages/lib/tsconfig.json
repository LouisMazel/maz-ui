{
  "extends": ["@vue/tsconfig/tsconfig.dom.json", "@vue/tsconfig/tsconfig.lib.json"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "lib": ["esnext", "DOM", "DOM.iterable", "scripthost"],
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "ignoreDeprecations": "5.0",
    "verbatimModuleSyntax": false,
    "types": ["@types/node", "google.maps", "vite-svg-loader"],
    "baseUrl": "."
  },
  "include": ["modules", "components", "tailwindcss/**/*", "icons", "utils", "resolvers"],
  "exclude": ["node_modules", "components_tmp/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
