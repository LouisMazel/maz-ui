{
  "extends": ["./../tsconfig.json"],
  "compilerOptions": {
    "paths": {
      "#": ["*"],
      "@/*": ["src/*"],
      "@tests/*": ["./tests/*"],
      "@components/*": ["src/components/*"],
      "@composables/*": ["src/composables/*"],
      "@directives/*": ["src/directives/*"],
      "@formatters/*": ["src/formatters/*"],
      "@utils/*": ["src/utils/*"],
      "@icons/*": ["src/icons/*"],
      "@plugins/*": ["src/plugins/*"],
      "@resolvers/*": ["src/resolvers/*"],
      "@ts-helpers/*": ["src/ts-helpers/*"]
    },
    "types": ["@types/node", "vite-svg-loader", "vitest/globals", "vue"]
  },
  "include": ["./../types/*", "**/*", "./../src/**/*"]
}
