{
  "extends": ["./../tsconfig.json"],
  "compilerOptions": {
    "paths": {
      "@tests/*": ["./tests/*"],
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@composables/*": ["src/composables/*"],
      "@directives/*": ["src/directives/*"],
      "@filters/*": ["src/filters/*"],
      "@helpers/*": ["src/helpers/*"],
      "@icons/*": ["src/icons/*"],
      "@plugins/*": ["src/plugins/*"],
      "@resolvers/*": ["src/resolvers/*"],
      "@ts-helpers/*": ["src/ts-helpers/*"]
    },
    "types": ["@types/node", "vite-svg-loader", "vitest/globals", "vue"]
  },
  "include": ["./../types/*", "**/*", "./../components/**/*", "./../modules/**/*"]
}
