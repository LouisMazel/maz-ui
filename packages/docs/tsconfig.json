{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "lib": ["DOM", "ESNEXT"],
    "moduleResolution": "node",
    "newLine": "lf",
    "module": "esnext",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
  },
  "include": ["docs/.vuepress/**/*", "types"],
  "exclude": ["node_modules", ".temp", "dist"]
}