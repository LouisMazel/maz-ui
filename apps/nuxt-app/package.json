{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "dev": "nuxi dev",
    "nuxt-app:build": "nuxi build",
    "preview": "nuxi preview",
    "postinstall": "nuxi prepare",
    "lint": "pnpm lint:js && pnpm lint:style",
    "lint:js": "cross-env NODE_ENV=production eslint --fix .",
    "lint:style": "stylelint --fix \"**/*.{vue,css,scss,postcss,pcss}\"",
    "pre-commit": "lint-staged",
    "type-check": "nuxi typecheck"
  },
  "dependencies": {
    "@maz-ui/themes": "workspace:*",
    "@maz-ui/translations": "workspace:*",
    "maz-ui": "workspace:*"
  },
  "devDependencies": {
    "@maz-ui/nuxt": "workspace:*",
    "@nuxt/devtools": "^2.4.1",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "autoprefixer": "^10.4.21",
    "nuxt": "^3.17.4",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "postcss-url": "^10.1.3",
    "stylelint": "^16.20.0",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "vite-svg-loader": "^5.1.0",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "lint-staged": {
    "*.{js,ts,vue,mjs,mts,cjs,md,yml,json}": "cross-env NODE_ENV=production eslint --fix",
    "*.{vue,css,scss,postcss,pcss}": "stylelint --fix"
  }
}
