    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "postcss-url": "^10.1.3",
    "stylelint": "catalog:",
    "stylelint-config-recommended-vue": "catalog:",
    "stylelint-config-standard": "catalog:",
    "stylelint-config-tailwindcss": "catalog:",
    "tailwindcss": "^3.4.17",
    "typescript": "catalog:",
    "vite-svg-loader": "^5.1.0",
