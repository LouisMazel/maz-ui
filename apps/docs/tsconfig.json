{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "../../packages/lib" }
  ],
  "include": [
    "docs/.vitepress/**/*",
    "types"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ]
}
